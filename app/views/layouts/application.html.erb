<!DOCTYPE html>
<html>
  <head>
    <title>Nicepicture</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <div class="navbar-brand" >NicePicture</div>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">

            <li>
              <%= link_to "Favorites", photos_favorites_path %>
            </li>
            <li>
              <%= link_to "Photos", photos_path %>
            </li>
          </ul>

          <%= form_with(url: photos_search_url, method: :get, class: "navbar-form navbar-right", local: true) do %>
            <%= text_field_tag 'search' %>
            <%= submit_tag 'Submit', class: "fbtn btn-default" %>
          <% end %>

        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
